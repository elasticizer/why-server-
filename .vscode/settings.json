{
	"css.format.maxPreserveNewLines": 1,
	"css.format.spaceAroundSelectorSeparator": true,

	"editor.fontFamily": "'Fantasque Sans Mono', Consolas, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"editor.fontSize": 16,
	"editor.formatOnSave": true,
	"editor.indentSize": "tabSize",
	"editor.insertSpaces": false,
	"editor.linkedEditing": true,
	"editor.quickSuggestions": {
		"comments": "inline",
		"other": "on",
		"strings": "inline"
	},
	"editor.snippetSuggestions": "top",
	// "editor.tabSize": 4,
	"editor.wordWrap": "bounded",
	"editor.wordWrapColumn": 120,

	"emmet.syntaxProfiles": {
		"html": {
			"self_closing_tag": true
		}
	},
	"emmet.variables": {
		"lang": "zh-hant-TW"
	},

	"files.associations": {
		"*.embeddedhtml": "html",
		".env*": "dotenv"
	},
	"files.autoSave": "onFocusChange",

	"html.format.maxPreserveNewLines": 1,
	"html.format.templating": true,
	"html.format.wrapAttributes": "force-expand-multiline",
	"html.format.wrapLineLength": 0,

	"livePreview.showServerStatusNotifications": true,

	// "phpTools.language": "zh",

	// "thunder-client.indentSize": 4,
	"thunder-client.saveToWorkspace": true,
	"thunder-client.sidebar.defaultTab": "Collections",

	"todo-tree.general.showActivityBarBadge": true,
	"todo-tree.general.tags": [
		"BUG",
		"HACK",
		"FIXME",
		"TODO",
		"XXX",
		"[ ]",
		"[x]",
		"!"
	],
	"todo-tree.regex.subTagRegex": "^<(.*)>",
	"todo-tree.tree.groupedByTag": true,
	"todo-tree.tree.scanMode": "workspace",
	"todo-tree.tree.tagsOnly": true,
	"todo-tree.tree.showCountsInTree": true,
	"todo-tree.tree.showCurrentScanMode": false,
	"todo-tree.tree.buttons.export": true,
	"todo-tree.tree.buttons.groupByTag": false,
	"todo-tree.tree.buttons.viewStyle": false,

	"tabnine.experimentalAutoImports": true,

    "workbench.colorTheme": "GitHub Dark Default",
	"workbench.iconTheme": "material-icon-theme",

	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},

	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},

	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},

	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}
